{
	"name": "electron-react-setup",
	"private": true,
	"version": "0.0.0",
	"main": "dist-electron/main.js",
	"author": "Cornelius Okeke",
	"scripts": {
		"prebuild": "rimraf dist-electron dist-ui dist-server",
		"dev": "npm-run-all --parallel dev:react dev:electron",
		"dev:react": "vite",
		"dev:electron": "npm run build:electron && cross-env NODE_ENV=development electron .",
		"preview": "vite preview",
		"build": "npm run build:react && npm run build:electron && npm run build:server",
		"build:react": "vite build",
		"build:server": "tsc --project tsconfig.server.json",
		"build:electron": "tsc --project tsconfig.electron.json",
		"dist:mac": "npm run build && electron-builder --mac --arm64",
		"dist:win": "npm run build && electron-builder --win --x64",
		"dist:linux": "npm run build && electron-builder --linux --x64",
		"lint": "eslint .",
		"test:e2e": "playwright test",
		"test:unit": "vitest test/main.test.ts"
	},
	"dependencies": {
		"axios": "^1.9.0",
		"classnames": "^2.5.1",
		"electron-updater": "^6.6.2",
		"express": "^5.1.0",
		"os-utils": "^0.0.14",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"react-hook-form": "^7.56.4",
		"react-router-dom": "^7.6.1",
		"recharts": "^2.15.3",
		"sonner": "^2.0.3",
		"tailwind-merge": "^3.3.0",
		"zustand": "^5.0.5"
	},
	"devDependencies": {
		"@eslint/js": "^9.27.0",
		"@playwright/test": "^1.52.0",
		"@tailwindcss/postcss": "^4.1.8",
		"@types/express": "^5.0.2",
		"@types/node": "^22.15.24",
		"@types/os-utils": "^0.0.4",
		"@types/react": "^19.1.6",
		"@types/react-dom": "^19.1.5",
		"@vitejs/plugin-react-swc": "^3.10.0",
		"autoprefixer": "^10.4.21",
		"cross-env": "^7.0.3",
		"electron": "^36.3.2",
		"electron-builder": "^26.0.12",
		"eslint": "^9.27.0",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.20",
		"globals": "^16.2.0",
		"nodemon": "^3.1.10",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.5.4",
		"rimraf": "^6.0.1",
		"tailwindcss": "^4.1.8",
		"ts-node": "^10.9.2",
		"typescript": "~5.8.3",
		"typescript-eslint": "^8.33.0",
		"vite": "^6.3.5",
		"vitest": "^3.1.4"
	}
}
